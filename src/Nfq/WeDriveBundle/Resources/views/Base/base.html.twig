{% extends '::layout.html.twig' %}

{% block errors %}
<div id="flash_container" class="container" >
    {% set errors = app.request.session.flashBag.get('error') %}
    {% for error in errors %}
        <div class="row">
            <div id="flashbag" class="bg-danger col-md-4 col-md-offset-4">
                {% block flasherror %}
                {% endblock %}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}

{% block content %}
    {{ parent() }}
    <div style="position: absolute;
  top: 8px; width: 100%; height: 1px;">
        {% include 'NfqWeDriveBundle:Navbar:navbar.html.twig' %}

        <div id="contentHolder">
            <div class=" main_info">
                <div class="col-lg-12">
                    <!-- Panel ---------------->
                    {% block panel %}
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 id="list_title"
                                    class="panel-title"> {% block panel_title %} {% endblock %} </h3>
                                {% block panel_title_button %}
                                {% endblock %}
                            </div>
                            <div class="panel-body">
                                <div class="widget-container table-responsive">
                                    <!-- Table ---------------->
                                    {% block panel_body %}
                                    {% endblock %}
                                </div>
                            </div>
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
