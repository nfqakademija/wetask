{% extends 'NfqWeDriveBundle:Base:base.html.twig' %}

{#{% form_theme form 'NfqWeDriveBundle:Form:fields.html.twig' %}#}

{% block panel_title %}
    New Route
{% endblock %}

{% block panel_body %}
    {{ form_start(routeForm, {'attr':{'id':'routeForm' }} )}}
    {{ form_errors(routeForm) }}

    <div class="form-group">
        {{ form_label(routeForm.name) }}
        {{ form_errors(routeForm.name) }}
        {{ form_widget(routeForm.name) }}
    </div>

    <div class="form-group">
        {{ form_label(routeForm.destination) }}
        {{ form_errors(routeForm.destination) }}
        {{ form_widget(routeForm.destination) }}
    </div>

    <div class="form-group">
        {{ form_widget(routeForm.save) }}
        <a class="btn btn-sm btn-warning"
           href = "{{ path('nfq_wedrive_route_list') }}">
            Cancel
        </a>
    </div>

    {{ form_end(routeForm) }}

    <script type="text/javascript">
        var routeDraw = true;
        var newRouteSubmit = "{{ path('nfq_wedrive_route_new') }}/";
    </script>
{% endblock %}
